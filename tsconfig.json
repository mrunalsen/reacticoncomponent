{
    "compilerOptions": {
        "target": "es6",
        "module": "esnext",
        "strict": true,
        "esModuleInterop": true,
        "moduleResolution": "node",
        "jsx": "react",
        "baseUrl": "./src",
        "paths": {
            "*": [
                "types/*",
                "*"
            ]
        }
    },
    "include": [
        "src/**/*.ts",
        "src/**/*.tsx",
        "svgr.d.ts",
        "next-env.d.ts",
        "**/*.ts",
        "**/*.tsx",
        ".next/types/**/*.ts",
        "node_modules/@types/react",
        "node_modules/@types/react-dom"
    ],
    "exclude": [
        "node_modules"
    ]
}